@model SmartPortalApp.Models.School

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit School Details</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SchoolId" />
            <div class="row">
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="SchoolCode" class="control-label">School Code</label>
                <input asp-for="SchoolCode" class="form-control" />
                <span asp-validation-for="SchoolCode" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="SchoolName" class="control-label">School Name</label>
                <input asp-for="SchoolName" class="form-control" />
                <span asp-validation-for="SchoolName" class="text-danger"></span>
            </div>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
