@model SmartPortalApp.Models.School

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>View School details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            School Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolCode)
        </dd>
        <dt class="col-sm-2">
            School Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolName)
        </dd>
        <dt class="col-sm-2">
            Created By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedById)
        </dd>
        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            Modified By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedById)
        </dd>
        <dt class="col-sm-2">
            Modified On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SchoolId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
