@model IEnumerable<SmartPortalApp.Models.Role>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Role</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Roles List</h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr style="font-size:10px">
            <th>
                Role Code
            </th>
            <th>
                Role Name
            </th>
            <th>
                Created By
            </th>
            <th>
                Created On
            </th>
            <th>
                Edit
            </th>
            <th>
                View
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="font-size:10px">
            <td>
                @Html.DisplayFor(modelItem => item.RoleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedById)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.RoleId" style="font-size:10px" class="btn btn-primary">Edit</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.RoleId"style="font-size:10px" class="btn btn-warning">Details</a>
            </td>
            <td>
              <a asp-action="Delete" asp-route-id="@item.RoleId" style="font-size:10px" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
