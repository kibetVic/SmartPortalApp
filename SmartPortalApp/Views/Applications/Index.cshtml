@model IEnumerable<SmartPortalApp.Models.Application>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Application</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Application</h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr style="font-size:10px">
            <th>
                School
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                Upload KCSE
            </th>
            <th>
                Upload KCPE
            </th>
            <th>
                Reason For Transfer
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Eligibility Status
            </th>
            <th>
                Edit
            </th>
            <th>
                View
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="font-size:10px">
           
            <td>
                @Html.DisplayFor(modelItem => item.School.SchoolName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.SubjectName)
            </td>
            <td>
                            @if (!string.IsNullOrEmpty(item.UploadKCSE))
                            {
                                <a href="@item.UploadKCSE" target="_blank">
                                    <img src="@item.UploadKCSE" alt="KCSE" style="height: 30px;" />
                                </a>
                            }
            </td>
            <td>
                            @if (!string.IsNullOrEmpty(item.UploadKCPE))
                            {
                                <a href="@item.UploadKCPE" target="_blank">
                                    <img src="@item.UploadKCPE" alt="KCSE" style="height: 30px;" />
                                </a>
                            }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReasonForTransfer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EligibilityStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ApplicationId" style="font-size:10px" class="btn btn-primary">Edit</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ApplicationId" style="font-size:10px" class="btn btn-warning">Details</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.ApplicationId" style="font-size:10px" class="btn btn-danger">Delete</a>
            </td>
         </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</<div>
</div>
