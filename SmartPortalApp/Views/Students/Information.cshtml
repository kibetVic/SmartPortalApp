@model IEnumerable<SmartPortalApp.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">My information</h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr style="font-size:10px">
                    <th>
                        Sur name
                    </th>
                    <th>
                        Other Names
                    </th>
                    <th>
                        Reg.Number
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Course)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GenderId)
                    </th>
                    <th>
                        Kcpe 
                    </th>
                    <th>
                        Kcse
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        Phone.No
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        View
                    </th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="font-size:10px">
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OtherNames)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course!.Name)
                        </td>
                        <td>
                            @((ViewBag.Genders as List<Gender>)?.FirstOrDefault(g => g.GenderId == item.GenderId)?.Name)

                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.UploadKCPE))
                            {
                                <a href="@item.UploadKCPE" target="_blank" title="View KCPE Document">
                                    <i class="fas fa-file-pdf text-danger"></i> <!-- Font Awesome icon -->
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No file</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.UploadKCSE))
                            {
                                <a href="@item.UploadKCSE" target="_blank" title="View KCSE Document">
                                    <i class="fas fa-file-pdf text-danger"></i> <!-- Font Awesome icon -->
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No file</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNo)
                        </td>
                        <td>
                            <a asp-action="EditInformation" asp-route-id="@item.StudentId" style="font-size:10px" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.StudentId" style="font-size:10px" class="btn btn-warning">View</a>
                        </td>
                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</<div>
</div>

