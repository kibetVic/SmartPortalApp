@model IEnumerable<SmartPortalApp.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Student</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Student List</h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr style="font-size:10px">
            <th>
                User
            </th>
            <th>
                First Name
            </th>
            <th>
                Middle Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Registration No
            </th>
            <th>
                Identity
            </th>
            <th>
                KCSE Grade
            </th>
            <th>
                School
            </th>
            <th>
                Department
            </th>
            <th>
                Course
            </th>
            <th>
                Edit
            </th>
            <th>
                View
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="font-size:10px">
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KCSEGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School.SchoolName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
              <td>
                   <a asp-action="Edit" asp-route-id="@item.StudentId" style="font-size:10px" class="btn btn-primary">Edit</a>
                </td>
                <td>
                   <a asp-action="Details" asp-route-id="@item.StudentId" style="font-size:10px" class="btn btn-warning">Details</a>
                </td>
                <td>
                   <a asp-action="Delete" asp-route-id="@item.StudentId" style="font-size:10px" class="btn btn-danger">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
