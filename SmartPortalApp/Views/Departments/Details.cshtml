}

<div>
    <h4>View Department Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.School)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.School.SchoolId)
        </dd>
        <dt class = "col-sm-2">
            Department Code
