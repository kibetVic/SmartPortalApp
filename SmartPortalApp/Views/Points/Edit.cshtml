@model SmartPortalApp.Models.Point

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit points Form</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PointId" />
            <div class="row">
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PointCode" class="control-label">Point Code</label>
                <input asp-for="PointCode" class="form-control" />
                <span asp-validation-for="PointCode" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="AVGPoint" class="control-label">Avarage Point</label>
                <input asp-for="AVGPoint" class="form-control" />
                <span asp-validation-for="AVGPoint" class="text-danger"></span>
            </div>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
