@model SmartPortalApp.Models.Transfer

@{
    ViewData["Title"] = "Create";
}

<h4>Transfer Form</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Student</label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FromCourseId" class="control-label">Current Course</label>
                <input asp-for="FromCourseId" class="form-control" />
                <span asp-validation-for="FromCourseId" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ToCourseId" class="control-label">To Course</label>
                <input asp-for="ToCourseId" class="form-control" />
                <span asp-validation-for="ToCourseId" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="UploadKCSEResult" class="control-label">Upload KCSE Result</label>
                <input asp-for="UploadKCSEResult" class="form-control" />
                <span asp-validation-for="UploadKCSEResult" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="UploadKCPEResult" class="control-label">Upload KCPE Result</label>
                <input asp-for="UploadKCPEResult" class="form-control" />
                <span asp-validation-for="UploadKCPEResult" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="TransferStatus" class="control-label">Status</label>
                <input asp-for="TransferStatus" class="form-control" />
                <span asp-validation-for="TransferStatus" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="DeanApproval" class="control-label">Dean Approva</label>
                <input asp-for="DeanApproval" class="form-control" />
                <span asp-validation-for="DeanApproval" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ChairamnApproval" class="control-label">Chairman Approval</label>
                <input asp-for="ChairamnApproval" class="form-control" />
                <span asp-validation-for="ChairamnApproval" class="text-danger"></span>
            </div>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
