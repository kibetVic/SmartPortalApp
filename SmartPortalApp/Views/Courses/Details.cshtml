@model SmartPortalApp.Models.Course

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Course Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Course Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Ksce Mean Grade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KsceMeanGrade)
        </dd>
        <dt class = "col-sm-2">
            Department
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CourseId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
