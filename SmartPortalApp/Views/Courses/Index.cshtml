@model IEnumerable<SmartPortalApp.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Course</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Course</h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr style="font-size:10px">
            <th>
                Course Name
            </th>
            <th>
                Ksce Mean Grade
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>            
            <th>
                Edit
            </th>
            <th>
                View
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
  <tbody>
@foreach (var item in Model) {
         <tr style="font-size:10px">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KsceMeanGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseId" style="font-size:10px" class="btn btn-primary">Edit</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CourseId" style="font-size:10px" class="btn btn-warning">View</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.CourseId" style="font-size:10px" class="btn btn-danger">Delete</a>
            </td>          
        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</<div>
</div>